<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/header')%>
  </head>

  <body>
    <%- include('partials/navigation')%>
    <!-- Main Content -->
    <div class="container p-4">
      <div class="row">
        <% products.forEach(function (product) { %>
        <div class="col-md-4">
          <div class="card m-2 shadow-lg">
            <div class="card-header">
              <div>
                <img
                  src="<%= product.image %>"
                  class="card-img-top"
                  width="100"
                  height="305"
                />
              </div>
              <p><%=product.name %></p>
            </div>
            <div class="card-body">
              <p><%=product.description %></p>
              <p>$<%=product.price %></p>
            </div>
            <div class="card-footer">
              <a href="/updateProduct/<%= product.id %>" class="btn btn-dark">
                Update
              </a>
              <a href="/delete/<%= product.id %>" class="btn btn-danger">
                Delete
              </a>
            </div>
          </div>
        </div>
        <% })%>
      </div>
    </div>

    <%- include('partials/footer')%>
  </body>
</html>
